#include "ft_printf.h"

void ft_putnbr(int nb)
{
    char    c;
    int     sign;
    int     i;

    i = 0;
    sign = 1;
    if (nb < 0)
    {
        sign = -1;
       i += ft_putchar('-');
    }
    if (nb / 10 )
    i += ft_putnbr(nb / 10 * sign);
    c = (nb % 10) + 48;
    i += ft_putchar(c);
}
